<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/rideShare_btn"
        android:layout_width="211dp"
        android:layout_height="59dp"
        android:text="@string/rideShare_btn"
        android:layout_below="@id/welcome_message"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/navigation_btn"
        android:layout_width="211dp"
        android:layout_height="59dp"
        android:text="@string/navigation_btn"
        android:layout_below="@id/rideShare_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/friends_btn"
        android:layout_width="211dp"
        android:layout_height="59dp"
        android:text="@string/friends_btn"
        android:layout_below="@id/navigation_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/profile_btn"
        android:layout_width="211dp"
        android:layout_height="59dp"
        android:text="@string/profile_btn"
        android:layout_below="@id/friends_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="211dp"
        android:layout_height="59dp"
        android:text="@string/settings_btn"
        android:layout_below="@id/profile_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="211dp"
        android:layout_height="59dp"
        android:text="@string/logout_btn"
        android:layout_below="@id/settings_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/permission_btn"
        android:layout_width="211dp"
        android:layout_height="59dp"
        android:text="@string/permission_btn"
        android:layout_below="@id/logout_btn"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
